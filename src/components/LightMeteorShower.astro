---
// src/components/LightMeteorShower.astro
---
<style>
  .meteor-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }
  .meteor {
    position: absolute;
    width: 2px;
    height: 60px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0));
    border-radius: 50%;
    transform: rotate(45deg);
    opacity: 0;
    animation: meteor-fall 4s ease-in-out infinite;
  }
  @keyframes meteor-fall {
    0% {
      transform: translate(0, 0) rotate(45deg);
      opacity: 0;
    }
    10% {
      opacity: 0.6;
    }
    100% {
      transform: translate(100vw, 100vh) rotate(45deg);
      opacity: 0;
    }
  }
  /* Stagger animation for multiple meteors */
  .meteor:nth-child(2) {
    animation-delay: 1s;
  }
  .meteor:nth-child(3) {
    animation-delay: 2s;
  }
  .meteor:nth-child(4) {
    animation-delay: 3s;
  }
</style>
<div class="meteor-container">
  <!-- Example meteor placements; adjust positions as desired -->
  <div class="meteor" style="top: 20%; left: 10%;"></div>
  <div class="meteor" style="top: 40%; left: 30%;"></div>
  <div class="meteor" style="top: 60%; left: 50%;"></div>
  <div class="meteor" style="top: 80%; left: 70%;"></div>
</div>
