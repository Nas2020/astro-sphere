---
// src/components/LightTwinklingStars.astro
---
<style>
  .stars {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  .star {
    position: absolute;
    background: rgba(255, 255, 255, 0.4); /* softer white for light mode */
    border-radius: 50%;
    filter: blur(0.5px);
    animation: twinkle 3s ease-in-out infinite;
  }
  @keyframes twinkle {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 0.8; }
  }
</style>
<div class="stars">
  <!-- Example star placements; adjust or randomize as needed -->
  <div class="star" style="top: 10%; left: 20%; width: 2px; height: 2px;"></div>
  <div class="star" style="top: 15%; left: 50%; width: 3px; height: 3px;"></div>
  <div class="star" style="top: 30%; left: 70%; width: 1px; height: 1px;"></div>
  <div class="star" style="top: 40%; left: 25%; width: 2px; height: 2px;"></div>
  <div class="star" style="top: 60%; left: 80%; width: 2px; height: 2px;"></div>
  <div class="star" style="top: 80%; left: 60%; width: 3px; height: 3px;"></div>
  <div class="star" style="top: 90%; left: 30%; width: 1px; height: 1px;"></div>
</div>
